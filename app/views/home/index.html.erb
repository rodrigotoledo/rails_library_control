<div class="w-full h-screen flex flex-col items-center justify-center">
  <%=image_tag 'logo.png', alt: "Biblioteca", class:"rounded-full shadow-lg w-40 h-40" %>

  <div class="mt-4 p-4 bg-gray-200">
    <h2 class="text-xl font-semibold text-center">Last Books Read</h2>
    <%=turbo_stream_from 'top_read_books' %>
    <%=turbo_frame_tag 'top_read_books' do %>
      <%=render partial: 'home/top_read_books' %>
    <% end %>
  </div>

  <div class="my-4 grid grid-cols-1 sm:grid-cols-2 gap-4 mx-auto">
    <div class="bg-gray-300 p-4 rounded-full w-40 h-40 flex items-center justify-center flex-col text-center">
      <h3 class="text-xl font-semibold">Total Books Read</h3>
      <p class="text-gray-600 text-lg">
      <%=turbo_stream_from 'total_read' %>
      <%=turbo_frame_tag 'total_read' do %>
        <%=render partial: 'home/total_read' %>
      <% end %>
      </p>
    </div>

    <div class="bg-gray-300 p-4 rounded-full w-40 h-40 flex items-center justify-center flex-col text-center">
      <h3 class="text-xl font-semibold">Total Unread Books</h3>
      <p class="text-gray-600 text-lg">
      <%=turbo_stream_from 'total_unread' %>
      <%=turbo_frame_tag 'total_unread' do %>
        <%=render partial: 'home/total_unread' %>
      <% end %>
      </p>
    </div>
  </div>
</div>